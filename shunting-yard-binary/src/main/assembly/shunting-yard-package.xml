<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tgz</format>
  </formats>
  <baseDirectory>shunting-yard-${project.version}</baseDirectory>
  <files>
    <file>
      <source>target/shunting-yard-${project.version}-all.jar</source>
      <outputDirectory>lib</outputDirectory>
      <destName>shunting-yard-all-latest.jar</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>com.expediagroup:*</exclude>
        <exclude>com.hotels:*</exclude>
        <exclude>com.google.api*:*</exclude>
        <exclude>com.google.cloud*:*</exclude>
        <exclude>com.google.oauth*:*</exclude>
        <exclude>com.google.http*:*</exclude>
        <exclude>com.google.guava:guava</exclude>
        <exclude>com.hotels.hadoop:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>false</filtered>
      <fileMode>744</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>..</directory>
      <outputDirectory></outputDirectory>
      <filtered>false</filtered>
      <fileMode>644</fileMode>
      <includes>
        <include>README.md</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
